extends layout

block scripts
    script(type='text/javascript').
        function login() {
            var user = $('#username').val().trim();
            sessionStorage.setItem('chat_user_name',user);
        }


block content
    div(class="container center-block", style="width:300px")
        div(class="row text-center")
            a(href="/") Chat Demo

        div(class="row text-center")
            strong Log In

        form(name="form", action="chat", method="get", accept-charset="utf-8", onsubmit="login();", class="row")
            div(class="row list-group")
                div(class="list-group-item")
                    input(type="text" name="username" id="username" placeholder="Name" class="form-control" required)
                div(class="list-group-item")
                    div.dropdown
                        select(class="btn btn-default dropdown-toggle", name="st")
                            option(value="sockjs") SockJS
                            option(value="socketio") Socket.io


            div.row
                input(type="submit" class="btn btn-lg btn-primary btn-block" value="Log in")
